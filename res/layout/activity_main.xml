<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="ResetScore"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/holo_blue_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_a_score"
                android:padding="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety"
                android:onClick="teamASafety"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Goal"
                android:onClick="teamAFieldGoal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="touchdown"
                android:onClick="teamATouchDown"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1-point Conversion"
                android:onClick="teamA1Point"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-point Conversion"
                android:onClick="teamA2Points"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/holo_orange_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_b_score"
                android:padding="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety"
                android:onClick="teamBSafety"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field Goal"
                android:onClick="teamBFieldGoal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="touchdown"
                android:onClick="teamBTouchDown"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1-point Conversion"
                android:onClick="teamB1Point"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-point Conversion"
                android:onClick="teamB2Points"/>





        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/top_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed Passes"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_a_com_passes"
                android:padding="5dp"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incomplete Passes"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_a_missed_passes"
                android:padding="5dp"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completion Rate"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_a_com_rate"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed Pass"
                android:onClick="teamACompleted"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missed Pass"
                android:onClick="teamAMissed"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed Passes"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_b_com_passes"
                android:padding="5dp"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incomplete Passes"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_b_missed_passes"
                android:padding="5dp"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completion Rate"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:id="@+id/team_b_com_rate"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed Pass"
                android:onClick="teamBCompleted"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missed Pass"
                android:onClick="teamBMissed"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
